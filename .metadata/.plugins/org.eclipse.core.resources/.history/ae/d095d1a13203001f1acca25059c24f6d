/* Private variables ---------------------------------------------------------*/
TIM_HandleTypeDef htim9;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
float cn = 0;
char buffor[60];
int8_t countrot = 0;
uint8_t prevval = 0;


/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
